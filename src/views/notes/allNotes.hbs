<div class="row">
    {{#each notes}}
        <div class="col-md-3 mt-2">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center ">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i> </a>
                </div>
                <div class="card-body">
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                            Delete
                        </button>
                    </form>
   
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-header"><h1>hello {{user.name}}</h1></div>
            <div class="card-body">
                <p class="lead"> There are not notes yet.</p>
                <a href="/notes/add" class="btn btn-block btn-success">
                    Create a task ¡¡
                </a>
            </div>
        </div>
    {{/each}}
</div>
