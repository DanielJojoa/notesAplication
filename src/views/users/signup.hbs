
<div class="row">
    <div class="col-md-4 mx-auto mt-4">
        <div class="card">
            <div class="card-header"><h5> Register Form </h5></div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Write Your Name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Write your email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Write your password" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password2" placeholder="Confirm your password" value="{{password2}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Sigin</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>